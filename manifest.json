{
  "manifest_version": 3,
  "name": "Manga Viewer",
  "version": "1.1",
  "description": "View manga and comics in a convenient reader interface",
  "permissions": ["activeTab", "scripting", "storage", "tabs", "commands"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "toggle-viewer": {
      "suggested_key": {
        "default": "Alt+V",
        "mac": "Alt+R"
      },
      "description": "Toggle manga viewer"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.x.com/*",
        "*://*.twitter.com/*",
        "*://*.pro.twitter.com/*"
      ],
      "js": ["settings.js", "content.js", "twitterImage.js", "viewer.js"],
      "css": ["viewer.css"]
    },
    {
      "matches": ["<all_urls>"],
      "js": ["settings.js", "content.js", "viewer.js"],
      "css": ["viewer.css"]
    }
  ]
}